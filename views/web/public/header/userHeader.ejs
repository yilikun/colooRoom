<section class="user_header text-center">
        <a ng-show="user && user.username == '<%= author.username %>'" data-toggle="modal" data-target="#changeLogo" class="user_header_logo">
            <img class="user_header_logo_img img-circle" src="<%= author.logo %>" alt="">
            <p class="change_logo_text text_smaller color_333">更换头像</p>
        </a>
        <a href="#" ng-hide="user && user.username == '<%= author.username %>'" class="user_header_logo">
            <img class="user_header_logo_img img-circle" src="<%= author.logo %>" alt="">
        </a>

    <h3 class="margin_top margin_bottom"><%= author.username %></h3>
    <p><%= author.comments %></p>
</section>
<div class="modal fade" id="changeLogo" ng-controller="changeLogoCtrl" tabindex="-1" >
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="myModalLabel">更换头像</h4>
            </div>
            <div class="text-center">
                <img class="img-circle" id="userUploadLogo" ng-src="{{uploadLogo || user.logo}}" alt="">
            </div>
            <div class="modal-body text-center">
                <form name="changeLogoForm" action="/uploadLogo" method="POST" enctype="multipart/form-data" >
                    <input style="display: none;" id="selectFile" type="file" ng-model="changeLogoData.logo" name="logo">
                    <a href="javascript:void(0)" class="btn btn-success" ng-click="selectLogo()">选择图片</a>
                    <input type="submit" class="btn btn-warning" value="上传">
                </form>
            </div>
        </div>
    </div>
</div>