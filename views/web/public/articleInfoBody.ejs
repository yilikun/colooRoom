<section>
    <img src="" alt="">
</section>
<section class="main_article_info box_shadow">
    <div ng-show="article.title" class="main_article_info_header">
        <h2 class="main_article_info_title text-center" ng-cloak>{{article.title}}</h2>
        <p class="main_article_info_info text-center" ng-cloak>作者：{{article.author}} | 收藏：{{article.collectNum}} | 转发：{{article.copyNum}} | 评论：{{article.commentNum}} | 点赞：{{article.likeNum}}</p>
    </div>
    <div ng-hide="article.title" class="main_article_info_header">
        <h2 class="main_article_info_title text-center">说说</h2>
        <p class="main_article_info_info text-center" ng-cloak>作者：{{article.author}} | 收藏：{{article.collectNum}} | 转发：{{article.copyNum}} | 评论：{{article.commentNum}} | 点赞：{{article.likeNum}}</p>
    </div>
    <div class="main_article_info_content">
        <p ng-bind-html="article.content | to_trusted"></p>
    </div>
    <div class="col-xs-12 main_article_info_content">
        <div class="panel panel-default margin_top margin_bottom">
            <div class="panel-body">
                <form class="form-horizontal" name="commentForm" ng-submit="commentArticle(commentForm.$valid,article)" novalidate>
                    <div class="form-group padding_top">
                        <label class="col-xs-2 control-label text-right comment_user_label"><img class="img-circle comment_user_logo" ng-src="{{user.logo || '/upload/users/logos/timg.png'}}" alt=""></label>
                        <div class="col-xs-9">
                            <input type="text" class="form-control" name="comment" ng-model="commentFormData.comment" placeholder="评论一下吧" required autofocus>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-11 text-right">
                            <input type="checkbox" name="copySame" ng-model="commentFormData.copySame">同时转发
                            <input type="submit" class="btn btn-warning" ng-disabled="commentForm.$invalid" value="评论">
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="panel panel-default margin_bottom" ng-repeat="comment in comments">
            <div class="panel-body row">
                <div class="col-xs-2 text-right">
                    <img class="img-rounded commenter_logo" ng-src="{{comment.commenterLogo}}" alt="">
                </div>
                <div class="col-xs-10">
                    <p class="margin_bottom"><a href="/users?username={{comment.commenter}}">{{comment.commenter}}</a></p>
                    <p class="margin_bottom"><em am-time-ago="comment.commentTime"></em></p>
                    <p class="margin_bottom" ng-bind-html="comment.comment | to_trusted "></p>
                </div>
                <div class="col-xs-10 col-xs-offset-2" ng-repeat="answer in comment.answers">
                    <p>{{answer.answer}}</p>
                </div>
            </div>
        </div>
    </div>
    <p><a href="#"></a></p>
</section>